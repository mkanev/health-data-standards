<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3 http://maven.apache.org/xsd/assembly-1.1.3.xsd">
  <id>jar-with-dependencies-and-gems</id>
  <formats>
    <format>jar</format>
  </formats>
  <includeBaseDirectory>false</includeBaseDirectory>
  <fileSets>
    <fileSet>
      <outputDirectory>/</outputDirectory>
      <!-- include all bin scripts -->
      <directory>${project.basedir}/bin</directory>
      <includes>
        <include>*</include>
      </includes>
    </fileSet>
    <fileSet>
      <outputDirectory>/</outputDirectory>
      <directory>${project.basedir}/pkg</directory>
      <includes>
        <include>*.gem</include>
      </includes>
    </fileSet>
    <fileSet>
      <outputDirectory>/</outputDirectory>
      <!-- include all bin scripts from gems -->
      <directory>${gem.home}/bin</directory>
      <includes>
        <include>*</include>
      </includes>
    </fileSet>
    <fileSet>
      <outputDirectory>/</outputDirectory>
      <!-- use gem.home property where the runtime gems are installed-->
      <directory>${gem.home}</directory>
      <includes>
        <include>gems/**</include>
        <include>specifications/**</include>
      </includes>
    </fileSet>
  </fileSets>
  <dependencySets>
    <dependencySet>
      <outputDirectory>/</outputDirectory>
      <useProjectArtifact>true</useProjectArtifact>
      <unpack>true</unpack>
      <scope>runtime</scope>
      <excludes>
        <exclude>*:gem:*</exclude>
      </excludes>
    </dependencySet>
  </dependencySets>
</assembly>
